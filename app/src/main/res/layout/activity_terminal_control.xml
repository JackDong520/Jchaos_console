<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".activity.TerminalControlActivity">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        tools:ignore="MissingConstraints">

        <Button
            android:id="@+id/NmapButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/TerminalGetNmapInfo" />

        <TextView
            android:id="@+id/NmapText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/TerminalGetOsInfo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <Button
            android:id="@+id/StartKeyLoggerButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/StartKeylogger" />

        <Button
            android:id="@+id/EndKeyLoggerButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/TerminalEndKeylogger" />

        <TextView
            android:id="@+id/KeyLoggerTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />


    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>